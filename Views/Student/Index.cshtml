@model WebApplication1.Models.Student

<h2>Đăng ký chuyên ngành</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="MSSV"></label>
        <input asp-for="MSSV" class="form-control" />
        <span asp-validation-for="MSSV" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HoTen"></label>
        <input asp-for="HoTen" class="form-control" />
        <span asp-validation-for="HoTen" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiemTB"></label>
        <input asp-for="DiemTB" class="form-control" />
        <span asp-validation-for="DiemTB" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ChuyenNganh"></label>
        <select asp-for="ChuyenNganh" class="form-control">
            <option value="">Chọn chuyên ngành</option>
            <option value="CNPM">Công nghệ phần mềm</option>
            <option value="HTTT">Hệ thống thông tin</option>
            <option value="ANM">An ninh mạng</option>
            <option value="TTNT">Trí tuệ nhân tạo</option>
            <option value="MMT">Mạng máy tính</option>
        </select>
        <span asp-validation-for="ChuyenNganh" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Đăng ký</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}